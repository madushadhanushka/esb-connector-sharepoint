<template name="deleteList" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="ifMatch"
               description="To force an overwrite of the item regardless of version, set the ETag value."/>
    <parameter name="title" description="The title of the list to delete."/>
    <sequence>
        <property name="uri.var.title" expression="$func:title"/>
        <property name="uri.var.ifMatch" expression="$func:ifMatch"/>
        <property name="uri.var.callEndpointUri" expression="fn:concat($ctx:uri.var.apiUrl, '/_api/web/lists/GetByTitle(', $ctx:uri.var.quotationMark, $ctx:uri.var.title, $ctx:uri.var.quotationMark, ')')"/>
        <property name="httpMethod" value="DELETE"/>
        <sharepoint.callOperation/>
    </sequence>
</template>
